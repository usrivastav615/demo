<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:id="@+id/cardTile"
    android:clickable="true"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="7dp"
    android:layout_height="140dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView1"
        android:layout_marginBottom="5dp"
        android:textStyle="bold"
        android:fontFamily="@android:string/selectTextMode"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imageView"
        android:textColor="#000000"
        android:textSize="10sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_marginTop="5dp"
        android:layout_height="20dp"
        android:orientation="horizontal"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:gravity="right"
        android:textColor="#000000"
        android:textSize="10sp" />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
        <RadioButton
            android:id="@+id/radio_mainCard_like"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/like_button_selector"
            android:button="@android:color/transparent"
            android:checked="false"
            android:layout_gravity="right"
             />
        <RadioButton
            android:id="@+id/radio_mainCard_bookmark"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/bookmark_button_selector"
            android:button="@android:color/transparent"
            android:checked="false"
            android:layout_gravity="right"
            />
    </LinearLayout>

</LinearLayout>
    </android.support.v7.widget.CardView>